{
  "name": "renderer",
  "version": "1.0.0",
  "description": "A simple renderer project",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "author": "Gignaati",
  "license": "ISC",
  "devDependencies": {
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "bootstrap": "^5.3.8",
    "sqlite3": "^5.1.7",
    "systeminformation": "^5.27.7"
  },
  "build": {
    "appId": "com.gignaati.workbench",
    "productName": "Gignaati Workbench",
    "icon": "Icon-Gignaati.ico",
    "directories": {
      "output": "dist"
    },
    "extraResources": [
      {
        "from": "resources/backend/",
        "to": "backend/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}